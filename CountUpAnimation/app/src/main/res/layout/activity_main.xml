<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jestina.myapplication.view.MainActivity">

    <com.example.jestina.myapplication.customview.CountAniTextView
        android:id="@+id/main_txv_count_up_ex"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/main_etx_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:text="0"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        />

    <EditText
        android:id="@+id/main_etx_count"

        android:layout_width="200dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/main_txv_count_up_ex"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_btn_count_up"

        android:hint="Count Here !"
        android:inputType="number"
        />

    <Button
        android:id="@+id/main_btn_count_up"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/main_etx_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="Click"/>

</android.support.constraint.ConstraintLayout>
